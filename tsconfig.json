{
    "include": ["src/**/*.ts"],
	"exclude": ["unsafe.d.ts"],
    "compilerOptions": {
		"lib": ["DOM", "ES5", "ES6", "ES7"],
		"module": "ESNext",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"declaration": true,
		"declarationDir": "dist/types",
		"isolatedModules": true,
		"strictNullChecks": true,
		"strict": true,
		"sourceMap": true,
		"target": "ES6",
        "outDir": "dist/esm",
		"noEmit": false,
    }
}
